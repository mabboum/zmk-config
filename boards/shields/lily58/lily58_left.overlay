/ {
    chosen {
        zmk,underglow = &underglow;
    };
};

/ {
    underglow: ws2812 {
        compatible = "worldsemi,ws2812-gpio";

        /*
         * ⚠️ CHANGE THIS PIN IF NEEDED ⚠️
         *
         * Common Lily58 RGB pins:
         *  GP16  → <&gpio0 16 GPIO_ACTIVE_HIGH>
         *  GP17  → <&gpio0 17 GPIO_ACTIVE_HIGH>
         *  GP18  → <&gpio0 18 GPIO_ACTIVE_HIGH>
         */
        gpios = <&gpio0 16 GPIO_ACTIVE_HIGH>;

        chain-length = <12>;
        color-order = <1 0 2>; /* GRB */
        label = "LILY58_UNDERGLOW";
    };
};
